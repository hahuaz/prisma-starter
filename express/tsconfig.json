{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  // following allows to use `@` alias in ts-node
  // Do not forget to `npm i -D tsconfig-paths`
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
